cat > .gitignore << 'EOF'
# Dependencies
node_modules/
*/node_modules/
.pnp
.pnp.js

# Testing
coverage/
*/coverage/
.nyc_output

# Production builds
dist/
build/
*/dist/
*/build/

# Environment files
.env
.env.local
.env.*.local
*/.env
*/.env.local

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*

# OS files
.DS_Store
Thumbs.db
*.swp
*.swo

# IDE
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# Temporary files
tmp/
temp/
uploads/*
!uploads/.gitkeep

# Docker
docker-compose.override.yml
.dockerignore

# Cache
.cache/
.parcel-cache/
.next/
.nuxt/
.turbo/

# TypeScript
*.tsbuildinfo

# Optional npm cache directory
.npm

# Optional eslint cache
.eslintcache

# Optional REPL history
.node_repl_history

# Output of 'npm pack'
*.tgz

# Yarn
.yarn-integrity
yarn.lock

# pnpm
pnpm-lock.yaml
